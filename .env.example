# Server Configuration
PORT=3001
NODE_ENV=production

# Security
JWT_SECRET=your_secure_jwt_secret_here
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# CORS Configuration
ALLOWED_ORIGINS=https://propempire.com,https://www.propempire.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE_PATH=./logs

# Database Configuration (for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=propempire
# DB_USER=postgres
# DB_PASSWORD=your_secure_password_here

# Email Configuration (for future use)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_secure_password_here
# SMTP_FROM=noreply@propempire.com

# File Upload Configuration (for future use)
# MAX_FILE_SIZE=5242880  # 5MB in bytes
# ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
# UPLOAD_DIR=./uploads

# Cache Configuration (for future use)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_secure_password_here

# Monitoring (for future use)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here 